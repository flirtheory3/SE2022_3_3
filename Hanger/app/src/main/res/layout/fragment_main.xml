<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="12dp"
        tools:context=".main.CalendarFragment">

        <ImageView
            android:id="@+id/weather_iv"
            android:layout_width="26dp"
            android:layout_marginRight="8dp"
            android:layout_height="26dp"
            tools:src="@color/hazyBrown"
            app:layout_constraintRight_toLeftOf="@+id/weather_tv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/weather_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/weather_iv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/weather_iv"
            tools:text="23도 맑음" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>